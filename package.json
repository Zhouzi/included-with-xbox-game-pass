{
  "private": true,
  "scripts": {
    "tsc": "tsc --noEmit",
    "scrapGames": "node --unhandled-rejections=strict -r ts-node/register ./packages/actions/scrapGames.ts",
    "scrapNews": "node --unhandled-rejections=strict -r ts-node/register ./packages/actions/scrapNews.ts",
    "generateRSS": "node --unhandled-rejections=strict -r ts-node/register ./packages/actions/generateRSS.ts",
    "sendNewsletter": "node --unhandled-rejections=strict -r ts-node/register ./packages/actions/sendNewsletter/sendNewsletter.ts",
    "prebuild:extension": "rm -rf ./dist",
    "build:extension": "parcel build ./packages/extension/manifest.json -d ./dist",
    "postbuild:extension": "cd ./dist && bestzip ../../extension.zip *",
    "start:xgp.community": "serve ./packages/xgp.community -p 1234",
    "start:extension": "parcel ./packages/extension/manifest.json -p 5678",
    "start": "concurrently 'npm run start:xgp.community' 'npm run start:extension'"
  },
  "dependencies": {
    "@types/fs-extra": "^9.0.2",
    "@types/mjml": "^4.0.4",
    "@types/node": "^14.11.10",
    "@types/puppeteer": "^3.0.2",
    "@types/react": "^16.9.53",
    "@types/rss": "0.0.28",
    "alpha-sort": "^3.1.0",
    "bestzip": "^2.1.7",
    "concurrently": "^5.3.0",
    "date-fns": "^2.16.1",
    "dom-chef": "^4.2.2",
    "fs-extra": "^9.0.1",
    "fuse.js": "^6.4.1",
    "handlebars": "^4.7.6",
    "mjml": "^4.7.1",
    "parcel-bundler": "^1.12.4",
    "parcel-plugin-web-extension": "^1.6.1",
    "puppeteer": "^5.3.1",
    "rss": "^1.2.2",
    "serve": "^11.3.2",
    "sib-api-v3-typescript": "^2.0.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3",
    "webext-storage-cache": "^4.1.1",
    "webextension-polyfill-ts": "^0.20.0"
  }
}
